        <TextBlock HorizontalAlignment="Left" Margin="219,241,0,0" Text="Enter the pre text" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="PreText" HorizontalAlignment="Left" Margin="424,241,0,0" Text="C:\Temp\HOPShare\SilentJob\Sample_Folder" TextWrapping="Wrap" VerticalAlignment="Top" Width="305"/>
        <TextBlock HorizontalAlignment="Left" Margin="218,304,0,114" Text="Enter the post text after increment" TextWrapping="Wrap"/>
        <TextBox x:Name="PostText" Margin="424,317,256,99" Text=".csv" TextWrapping="Wrap"/>
        <Button Content="Button" HorizontalAlignment="Center" Margin="0,362,0,0" VerticalAlignment="Top" Height="36" Width="181" Click="Button_Click"/>

    </Grid>
</Window>
