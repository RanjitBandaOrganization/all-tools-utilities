<Window x:Class="CopySilentJobFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CopySilentJobFiles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="155,183,0,0" Text="Enter the lines to skip in between the text" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNoOfLinesToSkip" HorizontalAlignment="Left" Margin="433,182,0,0" Text="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.494,6.382"/>
        <TextBlock HorizontalAlignment="Left" Margin="156,133,0,0" Text="Enter the Transcript text file FULL path" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTranscriptFileFullPath" HorizontalAlignment="Left" Margin="424,133,0,0" Text="HelperFiles\\Docker Tutorial for Beginners _ Docker Full Course _ Access to FREE LABS [No Ads].srt" TextWrapping="Wrap" VerticalAlignment="Top" Width="305" />
        <Button Content="Button" HorizontalAlignment="Center" Margin="0,362,0,0" VerticalAlignment="Top" Height="36" Width="181" Click="Button_Click"/>

    </Grid>
</Window>
